<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".auth.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_Position"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageView
            android:id="@+id/back_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/backspace"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="148dp"
            android:fontFamily="@font/roboto"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/back_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">

        <TextView
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/top_Position"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="이메일"
            android:id="@+id/email"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            tools:ignore="NotSibling" />

        <EditText
            android:layout_marginLeft="23dp"
            android:id="@+id/user_email"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:hint="example@homerun.com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:text="중복확인"
            app:layout_constraintLeft_toRightOf="@id/user_email"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/user_email"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="비밀번호"
            android:id="@+id/pw"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            tools:ignore="NotSibling" />


        <EditText
            android:layout_marginLeft="23dp"
            android:id="@+id/user_password"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:hint="숫자, 영문, 특수문자 포함 6자리이상"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pw" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/user_password"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="비밀번호 찾기 질문"
            android:id="@+id/pw_find_question"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            tools:ignore="NotSibling" />

        <Spinner
            android:layout_marginLeft="20dp"
            android:id="@+id/pw_find_question_choice"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="20sp"
            android:hint="답을 입력해 주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pw_find_question" />

        <EditText
            android:layout_marginLeft="23dp"
            android:id="@+id/pw_find_answer"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="15sp"
            android:hint="답을 입력해 주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pw_find_question_choice" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/pw_find_answer"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="이름"
            android:id="@+id/name"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            tools:ignore="NotSibling" />


        <EditText
            android:layout_marginLeft="23dp"
            android:id="@+id/user_name"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="15sp"
            android:hint="이름을 입력해주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="생년월일"
            android:id="@+id/birth"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            tools:ignore="NotSibling" />


        <EditText
            android:layout_marginLeft="23dp"
            android:id="@+id/birth_day"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="15sp"
            android:hint="-을 제외한 생년월일을 입력해주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/birth" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/birth_day"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="성별"
            android:id="@+id/sex"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            tools:ignore="NotSibling" />



        <RadioGroup
            android:id="@+id/Sex_Group"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/sex"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:text="남자"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <RadioButton
                android:layout_marginLeft="10dp"
                android:text="여자"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
        </RadioGroup>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/Sex_Group"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="지점등록(선택사항)"
            android:id="@+id/point"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            tools:ignore="NotSibling" />


        <EditText
            android:layout_marginLeft="23dp"
            android:id="@+id/user_sign_point"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:textSize="15sp"
            android:hint="현재 다니는 지점을 입력해주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/point" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="573dp"
            android:background="#ffffff"
            android:text="지점확인"
            app:layout_constraintLeft_toRightOf="@id/user_sign_point"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:background="#B6B6B6"
            android:text="다음으로"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>