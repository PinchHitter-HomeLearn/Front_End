<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".auth.SignUpActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_Position"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:elevation="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_icon_left_outline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inner_position"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/simple_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="34dp"
            android:text="기본정보"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="34dp"
            android:text="이름"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/simple_info" />

        <EditText
            android:id="@+id/user_name_input"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/sign_up_id_box"
            android:hint="이름을 입력해주세요"
            android:inputType="text"
            android:paddingStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name" />


        <Button
            android:id="@+id/Gender_male"
            android:layout_width="55dp"
            android:layout_height="42dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="128dp"
            android:orientation="horizontal"
            android:textColor="#EB5757"
            android:text="남"
            android:background="@drawable/gender_box"

            app:layout_constraintLeft_toRightOf="@id/user_name_input"
            app:layout_constraintTop_toTopOf="@+id/inner_position"/>

        <Button
            android:id="@+id/Gender_female"
            android:layout_width="55dp"
            android:layout_height="42dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="128dp"
            android:orientation="horizontal"
            android:text="여"
            android:textColor="#C4C4C4"
            android:background="@drawable/gender_box"
            app:layout_constraintLeft_toRightOf="@id/Gender_male"
            app:layout_constraintTop_toTopOf="@+id/inner_position"/>
        
        
        
        
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="18dp"
            android:text="성별"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/user_name_input"
            app:layout_constraintBottom_toTopOf="@+id/Gender_male"
            />
        
        
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:text="휴대폰 번호"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name_input" />

        <EditText
            android:id="@+id/user_phone_input"
            android:layout_width="370dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/sign_up_id_box"
            android:hint="핸드폰 번호를 입력해주세요"
            android:inputType="phone"
            android:paddingStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_phone" />

        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:text="지점등록 (선택사항)"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_phone_input" />

        <TextView
            android:id="@+id/user_region"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/region_box"
            android:inputType="phone"
            android:paddingStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/region" />

        <Button
            android:id="@+id/user_region_check"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:text="지점검색"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/sign_up_id_checkbox"
            app:layout_constraintTop_toBottomOf="@+id/user_phone_input"
            app:layout_constraintLeft_toRightOf="@id/user_region"
            />


        <CheckBox
            android:id="@+id/user_useinfo_checkbox"
            android:layout_width="13.5dp"
            android:layout_height="13.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:button="@android:color/transparent"
            android:background="@drawable/sign_check_box"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_region"
            />
        
        <TextView
            android:id="@+id/text_useinfo"
            android:text="[필수] 이용약관 및 개인정보 처리방침 동의"
            android:textSize="12dp"
            android:layout_marginTop="38dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@id/user_useinfo_checkbox"
            app:layout_constraintTop_toBottomOf="@id/user_region"
            />

        <Button
            android:layout_width="22dp"
            android:layout_height="15dp"
            android:background="#00FFFFFF"
            android:text="보기"
            android:textSize="12dp"
            android:textColor="#EB5757"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@+id/text_useinfo"
            app:layout_constraintTop_toBottomOf="@+id/user_region"
            />




        <ImageView
            android:id="@+id/first"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/second"
            android:layout_marginLeft="185dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sign_up_last"
            />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/first"
            android:layout_marginRight="185dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sign_up_last"
            />

        <Button
            android:id="@+id/sign_up_last"
            android:text="다음"
            android:textSize="18sp"
            android:background="@drawable/sign_up_button"
            android:textColor="#FFFFFF"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>