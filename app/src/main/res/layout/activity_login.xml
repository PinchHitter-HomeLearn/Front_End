<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".auth.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:fontFamily="@font/maplebold"
            android:layout_marginLeft="70dp"
            android:id="@+id/idtext"
            android:text="ID"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="70dp"
            android:layout_height="50dp"/>
        <EditText
            android:maxLines="1"
            android:inputType="text"
            android:fontFamily="@font/maplelight"
            android:id="@+id/id_text"
            android:layout_toRightOf="@+id/idtext"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
        <TextView
            android:maxLines="1"
            android:fontFamily="@font/maplebold"
            android:layout_marginLeft="70dp"
            android:id="@+id/pwtext"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:text="PW"
            android:layout_below="@+id/idtext"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="70dp"
            android:layout_height="50dp"/>
        <EditText
            android:fontFamily="@font/maplelight"
            android:id="@+id/pw_text"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_below="@+id/id_text"
            android:layout_toRightOf="@+id/idtext"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="205dp"
        android:layout_gravity="center"
        android:layout_height="50dp">

        <Button
            android:fontFamily="@font/maplebold"
            android:id="@+id/signup_btn"
            android:text="회원가입"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="40dp"/>

        <Button
            android:fontFamily="@font/maplebold"
            android:id="@+id/signin_btn"
            android:text="로그인"
            android:layout_marginLeft="5dp"
            android:layout_width="90dp"
            android:layout_height="40dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_gravity="center"
            android:background="@drawable/kakao_login_medium_narrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_google_signin_light_normal_web"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/facebook"
            android:layout_width="183dp"
            android:layout_height="40dp"/>
    </LinearLayout>




</LinearLayout>