<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".auth.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <EditText
            android:hint="아이디 혹은 이메일"
            android:id="@+id/id_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:hint="비밀번호"
            android:fontFamily="@font/roboto"
            android:id="@+id/pw_text"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_below="@+id/id_text"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:fontFamily="@font/roboto"
                android:id="@+id/signin_btn"
                android:text="로그인"
                android:textSize="20sp"
                android:background="@drawable/login_btn_custom"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:fontFamily="@font/roboto"
                android:id="@+id/signup_btn"
                android:background="#00FFFFFF"
                android:text="회원가입"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="40dp"/>

            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/block"
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <Button
                android:fontFamily="@font/roboto"
                android:id="@+id/findpw_btn"
                android:background="#00FFFFFF"
                android:text="비밀번호 찾기"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="right"
                android:layout_width="100dp"
                android:layout_height="40dp"/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_gravity="center"
            android:background="@drawable/kakao_login_medium_narrow"
            android:layout_width="250dp"
            android:layout_height="55dp"/>


        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/facebook"
            android:layout_width="250dp"
            android:layout_height="55dp"/>


        <ImageButton
            android:layout_marginTop="1dp"
            android:background="@drawable/btn_google_signin_light_normal_web"
            android:layout_gravity="center"
            android:layout_width="255dp"
            android:layout_height="57dp"/>
    </LinearLayout>




</LinearLayout>