<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.MyInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_top_Position"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#F9F9F9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/main_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="대타홈런"
            android:textSize="23dp"
            android:textColor="#EB5757"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskrmedium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <EditText
            android:id="@+id/main_search_box"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/main_search_box"
            app:layout_constraintLeft_toRightOf="@+id/main_app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lense"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="@+id/main_search_box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/my_info_img"
            app:layout_constraintLeft_toRightOf="@+id/main_search_box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_postion"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/eb57line"
        app:layout_constraintTop_toBottomOf="@+id/main_top_Position"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/my_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/samplemyimage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/cameraicon"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="@id/my_image"
            app:layout_constraintTop_toTopOf="@id/my_image"/>

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내이름"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:elegantTextHeight="true"
            android:textColor="#000000"
            android:fontFamily="@font/notosanskrmedium"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="@+id/my_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskrregular"
            android:text="마포구 서대문구"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/my_image"
            app:layout_constraintTop_toBottomOf="@+id/my_name"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/twosomeicon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintWidth_percent=".3"
            app:layout_constraintWidth_default="percent"

            app:layout_constraintHeight_percent=".3"
            app:layout_constraintHeight_default="percent"
            />
        <view
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F4F4F4"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/first_postion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/jjim_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_jjim"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/jjim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찜한 알바"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginLeft="30dp"
            android:textColor="#4F4F4F"
            app:layout_constraintTop_toBottomOf="@+id/jjim_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toLeftOf="@+id/jjim_icon"
            app:layout_constraintRight_toRightOf="@+id/history"
            app:layout_constraintTop_toTopOf="parent"
            />


        <ImageView
            android:id="@+id/history"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_refresh"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@+id/jjim_icon"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찜한 알바"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginLeft="45dp"
            android:textColor="#4F4F4F"
            app:layout_constraintTop_toBottomOf="@+id/history"
            app:layout_constraintLeft_toRightOf="@+id/jjim_text"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toLeftOf="@+id/history"
            app:layout_constraintRight_toRightOf="@+id/changeinfo"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/changeinfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_write"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@+id/history"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/wirte_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보 수정"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginLeft="45dp"
            android:textColor="#4F4F4F"
            app:layout_constraintTop_toBottomOf="@+id/changeinfo"
            app:layout_constraintLeft_toRightOf="@+id/history_text"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toLeftOf="@+id/changeinfo"
            app:layout_constraintRight_toRightOf="@+id/setpositionicon"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/setpositionicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_setposition"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@+id/changeinfo"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동네 설정"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginLeft="45dp"
            android:textColor="#4F4F4F"
            app:layout_constraintTop_toBottomOf="@+id/setpositionicon"
            app:layout_constraintLeft_toRightOf="@+id/wirte_info"
            />
        <view
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F4F4F4"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
