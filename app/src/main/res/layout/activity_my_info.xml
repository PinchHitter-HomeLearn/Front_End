<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.MyinfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_top_Position"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:elevation="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/main_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="내정보"
            android:textSize="22dp"
            android:textColor="#000000"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskrmedium"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/gear"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_postion"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/main_top_Position"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/my_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/samplemyimage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/cameraicon"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="37dp"
            app:layout_constraintLeft_toLeftOf="@id/my_image"
            app:layout_constraintTop_toTopOf="@id/my_image"/>

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내이름 (아이디)"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:elegantTextHeight="true"
            android:textColor="#000000"
            android:fontFamily="@font/notosanskrmedium"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="@+id/my_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/my_info_position_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_my_info_position"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@id/my_image"
            app:layout_constraintTop_toBottomOf="@+id/my_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskrmedium"
            android:text="마포구, 서대문구"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintLeft_toRightOf="@id/my_info_position_icon"
            app:layout_constraintTop_toBottomOf="@+id/my_name"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/twosomeicon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintWidth_percent=".3"
            app:layout_constraintWidth_default="percent"

            app:layout_constraintHeight_percent=".3"
            app:layout_constraintHeight_default="percent"
            />

        <View
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_position"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/first_postion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/jjim_icon"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/ic_jjim"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/block_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/jjim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찜한 알바"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginTop="1dp"
            android:textColor="#4F4F4F"
            app:layout_constraintTop_toBottomOf="@+id/jjim_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/block_1"
            />

        <View
            android:id="@+id/block_1"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <ImageView
            android:id="@+id/history"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/ic_refresh"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/block_1"
            app:layout_constraintRight_toRightOf="@+id/block_2"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대타 내역"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginTop="1dp"
            android:textColor="#4F4F4F"
            app:layout_constraintTop_toBottomOf="@+id/history"
            app:layout_constraintLeft_toLeftOf="@+id/block_1"
            app:layout_constraintRight_toRightOf="@+id/block_2"
            />

        <View
            android:id="@+id/block_2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="100dp"
            app:layout_constraintLeft_toLeftOf="@+id/block_1"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/changeinfo"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/ic_write"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/block_2"
            app:layout_constraintRight_toRightOf="@id/block_3"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/wirte_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보 수정"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginTop="1dp"
            android:textColor="#4F4F4F"
            app:layout_constraintTop_toBottomOf="@+id/changeinfo"
            app:layout_constraintLeft_toLeftOf="@+id/block_2"
            app:layout_constraintRight_toRightOf="@+id/block_3"
            />

        <View
            android:id="@+id/block_3"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bdbdbd"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="100dp"
            app:layout_constraintLeft_toLeftOf="@id/block_2"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/setpositionicon"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/ic_setposition"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/block_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역 설정"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginTop="1dp"
            android:textColor="#4F4F4F"
            app:layout_constraintTop_toBottomOf="@+id/setpositionicon"
            app:layout_constraintLeft_toLeftOf="@+id/block_3"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#F4F4F4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/my_info_tabbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/second_position"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorColor="#EB5757"
        app:tabIndicatorHeight="5dp"
        app:tabMode="fixed"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/my_info_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
